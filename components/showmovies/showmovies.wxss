/* components/showMovies/showMovies.wxss */
@import "/template/ratingstar/ratingstar.wxss";
.movies{
  padding:0 40rpx;
}
.movies .header{
  display: flex;
  justify-content: space-between;
  padding:40rpx 0 20rpx 0;
}
.category-title{
  font-size: 40rpx;
  font-weight: bold;
}
.movies .more{
  font-size: 40rpx;
}
.movies .more image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle
}
.movie-box{
   display: flex;
   flex-wrap: wrap;
}
.movie-box .movie{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.movie image{
  width: 200rpx;
  height: 260rpx;
}
.movie .title{
  text-align: center;
  margin: 20rpx 0;
  font-size: 24rpx;
}


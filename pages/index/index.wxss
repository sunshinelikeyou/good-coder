.index{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.index .userInfo{
  display: flex;
  justify-content: flex-start;
  width:80%;
  line-height: 100rpx;
}
.index .userInfo .user-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}
.index .now{
  line-height: 100rpx;
}
.index .logo-img{
  width:90%;
  margin: 0 auto;
}
.index .title{
   line-height: 40px;
}
.index .go-start:active{
    background-color: white;
    color: black;
    border: 1px solid #1AAD19;
}